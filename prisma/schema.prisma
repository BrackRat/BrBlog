// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          Int    @id @default(autoincrement())
  title       String
  desc        String
  cover       String
  content     String
  viewCount   Int    @default(0)
  tag         String
  createTime  Int
  publishTime Int
}

model Friend {
  id         Int    @id @default(autoincrement())
  name       String
  avatar     String
  screenshot String
  link       String
}
